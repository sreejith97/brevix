<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Analytics</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

    <div class="container mt-5">
        <header class="text-center p-4 rounded">
            <h1>Analytics for <span class="fw-bold"><%= customAlias %></span> </h1>
            <a href="/dashboard" class="btn btn-light mt-2 bg-info">Go to Dashboard</a>
        </header>

        <section class="mt-4 p-4 bg-white shadow rounded">
            <h2 class="text-primary">Total Clicks: <%= totalClicks %></h2>
            <h3 class="text-secondary">Unique Users: <%= uniqueUsers %></h3>

            <div class="details mt-4 p-3 bg-light border rounded">
                <p><strong>ID:</strong> <%= id %></p>
                <p><strong>Long URL:</strong> <a href="<%= longUrl %>" target="_blank"><%= longUrl %></a></p>
                <p><strong>Short URL:</strong> <a href="<%= shortUrl %>" target="_blank"><%= shortUrl %></a></p>
                <p><strong>Custom Alias:</strong> <%= customAlias %></p>
                <p><strong>Topic ID:</strong> <%= topic ? topic?.name : "null" %></p>
                <p><strong>Created At:</strong> <%= new Date(createdAt).toLocaleString() %></p>
                <p><strong>User ID:</strong> <%= userId %></p>
            </div>
        </section>
        <section class="mt-4 p-4 bg-white shadow rounded">
            <h3>OS Analytics</h3>
            <table class="table table-bordered mt-4">
                <thead class="table-secondary">
                    <tr>
                        <th>ID</th>
                        <th>Alias </th>
                        <th>Device Name</th>
                        <th>Unique Clicks</th>
                        <th>Unique Users</th>
                        
                    </tr>
                </thead>
                <tbody>

                    <% deviceanalytics.forEach(item => { %>
                        <tr>
                            <td><%= id %></td>
                            <td><%= customAlias %></td>
                            <td><%= item.deviceName %></td>
                            <td><%= item.uniqueClicks %></td>
                            <td><%= item.uniqueUsers %></td>

                        </tr>

                        <% }); %>
                    
                </tbody>
            </table>
        </section>


        <section class="mt-4 p-4 bg-white shadow rounded">
            <h3>OS Analytics</h3>
            <table class="table table-bordered mt-4">
                <thead class="table-secondary">
                    <tr>
                        <th>ID</th>
                        <th>Alisa </th>
                        <th>OS Name</th>
                        <th>Unique Clicks</th>
                        <th>Unique Users</th>
                        
                    </tr>
                </thead>
                <tbody>

                    <% osanalytics.forEach(item => { %>
                        <tr>
                            <td><%= id %></td>
                            <td><%= customAlias %></td>
                            <td><%= item.osName %></td>
                            <td><%= item.uniqueClicks %></td>
                            <td><%= item.uniqueUsers %></td>

                        </tr>

                        <% }); %>
                    
                </tbody>
            </table>
        </section>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
